<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <application
        android:name=".data.hilt.QuickMark"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuickMark"
        tools:targetApi="31"
        >
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.QuickMark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.add_note_dialog.AddNoteActivity"
            android:exported="true"
            android:label="Add Note Activity"
            android:theme="@style/Theme.TransparentActivity">
            <intent-filter>
                <action android:name="@string/add_note_intent"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>



        <receiver android:name=".ui.add_note_dialog.WidgetClickListener"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.myapplication.WIDGET_ACTION_CLICK" />
            </intent-filter>
        </receiver>

        <receiver android:name=".ui.add_note_dialog.MyAppWidgetProvider"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/add_note_widget_provider" />
        </receiver>

        <service
            android:name=".ui.add_note_dialog.NewMarkdownFileDialogTileService"
            android:label="NewMarkdownFileDialogTile"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>


    </application>
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT"/>

</manifest>